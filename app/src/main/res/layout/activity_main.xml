<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#333333">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Saldo"
        android:id="@+id/btnCheckSaldo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="97dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:background="#1dceff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Past Transactions"
        android:id="@+id/btnPastTransactions"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnCheckSaldo"
        android:layout_alignRight="@+id/btnCheckSaldo"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:background="#1dceff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hi!"
        android:textSize="100px"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:textColor="#1dceff"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/btnCheckSaldo"
        android:layout_alignEnd="@+id/btnCheckSaldo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Communicate"
        android:id="@+id/btnCommunicate"
        android:background="#1dceff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/btnPastTransactions"
        android:layout_alignRight="@+id/btnPastTransactions" />
</RelativeLayout>
